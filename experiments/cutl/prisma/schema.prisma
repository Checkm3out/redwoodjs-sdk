// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model CutlistItem {
  id              String    @id @default(uuid())
  projectId       String
  project         Project   @relation(fields: [projectId], references: [id])
  quantity        Float
  width           Float
  length          Float
  createdAt       DateTime  @default(now())
  updatedAt       DateTime? @updatedAt
}

model Project {
  id              String    @id @default(uuid())
  title           String    @default("My Cutlist")
  userId          String
  user            User      @relation(fields: [userId], references: [id])
  bladeWidth      Float     @default(3)
  boardWidth      Float     @default(1220)
  boardLength     Float     @default(2440)
  boardPrice      Float     @default(0)
  cutlistItems    CutlistItem[]
  currency        String    @default("R")
  total           Float
  createdAt       DateTime  @default(now())
  updatedAt       DateTime? @updatedAt
}

model User {
  id                String    @id @default(uuid())
  email             String    @unique
  authToken         String?
  authTokenExpiresAt DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime? @updatedAt
  Project           Project[]
}
